{
  "name": "alphpad",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "build": "npm run clean:windows && npm run clean:unix && npx --yes tsc --build .",
    "clean:unix": "node -e \"if (process.platform !== 'win32') process.exit(1)\" || rm -rf dist",
    "clean:windows": "node -e \"if (process.platform === 'win32') process.exit(1)\" || , if exist dist rmdir /Q /S dist",
    "devnet:start": "npx --yes @alephium/cli@ devnet start",
    "devnet:stop": "npx --yes @alephium/cli devnet stop",
    "compile": "npx --yes @alephium/cli compile",
    "deploy": "npx --yes @alephium/cli deploy",
    "deploy-testnet": "env $(cat ./testnet.env | xargs) npx --yes @alephium/cli deploy -n testnet",
    "deploy-mainnet": "env $(cat ./mainnet.env | xargs) npx --yes @alephium/cli deploy -n mainnet",
    "lint": "eslint . --ext ts",
    "lint:fix": "eslint . --fix --ext ts",
    "test": "jest -i --config ./jest-config.json --verbose"
  },
  "dependencies": {
    "@alephium/cli": "0.38.2",
    "@alephium/web3": "0.38.2",
    "@alephium/web3-test": "0.38.2",
    "@alephium/web3-wallet": "0.38.2",
    "keccak256": "^1.0.6"
  },
  "devDependencies": {
    "@types/jest": "^27.5.1",
    "@types/node": "^16.18.23",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^28.1.0",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.4.2"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=7.0.0"
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "bracketSameLine": false,
    "trailingComma": "none"
  }
}
